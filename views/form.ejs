<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Todo-list</title>
</head>
<body>
    <h1 class="mx-auto text-center mt-2">Todo List</h1>
    <div class="container border mt-5 mx-auto p-5">
        <form method="post" action="/insert">
        <div class="mb-3">
            <input type="number"  name="id" />
            <label for="exampleInputEmail1" class="form-label">Enter task</label>
            <input type="text" name="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
    
        <button type="submit" class="btn btn-primary">Submit</button>

        </form>
    </div>


    <div class="container mt-5 border p-5">

        <table class="table p-5  ">
        <tr class="m-5">
            <th>id</th>
            <th>Task</th>
            <th>Delete</th>
            <th>Edit</th>
        
        </tr>

        <% task.map((ele) => {  %>
            
            <tr>
                <td><%= ele.id %></td>
                <td><%= ele.name %></td>
                 <td><a href="/delete/<%=ele.id %>"><button class="btn btn-danger">Delete</button></a></td>
                <td><button class="btn btn-warning">Edit</button></td>
            </tr>
            
        <% }) %>

    </table>

    </div>

    

</body>
</html>